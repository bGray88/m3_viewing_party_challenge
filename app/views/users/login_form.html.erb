<h1>Log In</h1>

<div id="login">
  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <%= form.label :email %>
    <%= form.text_field :email, required: true %><br>
    <%= form.label :password %>
    <%= form.text_field :password, required: true %><br>
    <%= form.submit "Log In" %>
  <% end %>
</div>